

@model SeatBookerApp.Models.ChartEvent



@{
    ViewBag.Title = "PostEvents";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post Events</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abel">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/styles2.min.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color:rgb(210,210,210);">
        <div class="container" >
            <a class="navbar-brand" href="#">Grab A Seat</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                 id="navcol-1">
               <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Home", "Index", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Seating Chart", "SeatingChart", "Chart", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Post Events", "PostEvents", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Available Events", "AvailableEvents", "Chart", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Logout", "Login", "Chart", null, new { @class = "nav-link", onclick = "return confirm('Are you sure');" })</li>
                    </ul>
            </div>
        </div>
    </nav>
    <div class="row register-form" style="margin-right:0px;margin-left:0px;">
        <div class="col-md-8 offset-md-2" style="margin-top:0px;">
            @using (Html.BeginForm("PostEvents", "Chart", null, FormMethod.Post, new { @class = "custom-form", enctype = "multipart/form-data" }))
            {



                <h1>Post Your Events</h1>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column">
                        <label class="col-form-label" for="name-input-field">Event Name</label>
                    </div>
                    <div class="col-sm-6 input-column">

                       
                          
                            @Html.TextBoxFor(model => model.Event1.Event_Name, new { @placeholder = "Event Name", @class = "form-control" })
                        



                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="pawssword-input-field">Description</label></div>
                    <div class="col-sm-6 input-column">

                        @Html.TextAreaFor(model => model.Event1.Description, new { @placeholder = "Description", @class = "form-control" })
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="pawssword-input-field">Start-Date</label></div>
                    <div class="col-sm-6 input-column">

                        @Html.TextBoxFor(model => model.Event1.Start_Date, new { @placeholder = "Start-Date", @class = "form-control" })
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="pawssword-input-field">End-Date</label></div>
                    <div class="col-sm-6 input-column">

                        @Html.TextBoxFor(model => model.Event1.End_Date, new { @placeholder = "End-Date", @class = "form-control" })
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="dropdown-input-field">Seating Chart</label></div>
                    <div class="col-sm-4 input-column">
                        <div class="dropdown">

                            @{
                                
                                string[] chartId=new string[Model.Chart1.Count()];
                                    }

                            @for (int i = 0; i < Model.Chart1.Count(); i++)
                            {
                                chartId[i] = Model.Chart1.ElementAt(i).Chart_ID;
                            }



                            @Html.DropDownList("ChartList", new SelectList(chartId), new { @class = "btn btn-light" })

                        </div>
                    </div>
                </div>
                <div class="form-row form-group">
                    <div class="col-sm-4 label-column"><label class="col-form-label" for="dropdown-input-field">Choose Image</label></div>
                    <div class="col-sm-4 input-column">

                        <input type="file" name="file2" />

                    </div>
                </div>


                <input class="btn btn-light submit-button" type="submit" value="Post" style="width:90px;height:50px;background-color:rgb(17,109,179);">


            }
        </div>
    </div>
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>

