@model SeatBookerApp.Login_Table

@{
    ViewBag.Title = "RegisterForm";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/styles3.min.css">

    <style >
        .register-photo {
            background-color:transparent;
            width:100%;
            height:100%
        }

    </style>
</head>

<body style="height:726.4px;background-color:rgb(241,241,241);">
    
    <div class="register-photo" >
        <div class="form-container">
            <div class="image-holder" style=" background-image:url('@Url.Content("~/Content/img/chair.jpg")'); "> </div>
            @using (Html.BeginForm("RegisterForm", "Chart", FormMethod.Post))
                
            {
                <h2 class="text-center"><strong>Create</strong> an account.</h2>
                <div class="form-group">
                    @Html.TextBoxFor(model => model.User_Name, new { @placeholder = "User Name", @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(model => model.Password, new { @placeholder = "password", @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.Password("Confirm Password", null, new { @placeholder = "Confirm password", @class = "form-control" })
                </div>
                <div class="dropdown">
                    @{
                        string[] role = { "Event-Handler", "Participator" };

                        @Html.DropDownListFor(model => model.Role, new SelectList(role), "Select Role", new { })

                    }
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Sign Up" style="background-color:rgb(10,66,131);">

                </div>

                @Html.ActionLink("You already have an account? Login here.", "Login", "Chart", null, new { @class = "already" })
                        }
            </div>
    </div>
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>

