@model SeatBookerApp.Chart


@{
    ViewBag.Title = "SeatingForm";

}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Seating Form</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abel">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/styles.min.css">
</head>

<body>
    <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color:rgb(210,210,210);">
        <div class="container">
            <a class="navbar-brand" href="#">Grab A Seat</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse"
                 id="navcol-1">
               <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Home", "Index", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Seating Chart", "SeatingChart", "Chart", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Post Events", "PostEvents", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Available Events", "AvailableEvents", "Chart", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Logout", "Login", "Chart", null, new { @class = "nav-link", onclick = "return confirm('Are you sure');" })</li>
                    </ul>
            </div>
        </div>
    </nav>
    @using (Html.BeginForm())
    {

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div style="margin:20; border-color:black; border-style:solid; border-radius:5px; width:184px" >
        @Html.TextBoxFor(model => model.Chart_ID, new { @placeholder = "Venue Name" })
    </div>
        <div class="row" style="height:180px;margin-right:0px;margin-left:0px;margin-top:30px;">

            <div class="col">
                <img src="~/Content/img/row.jpg" style="width:250px;height:180px;">
            
                    @Html.TextBoxFor(model => model.Seat_Row, new { @placeholder = "Number of rows" })
                    
                </div>

                <div class="col" style="height:180px;">
                    <img src="~/Content/img/column.jpg" style="width:250px;height:180px;">
                    @Html.TextBoxFor(model => model.Seat_Column, new { @placeholder = "Number of Cols" })
                </div>
            </div>

        <div class="row" style="margin-right:0px;margin-left:0px;margin-top:30px;">

            <div class="col">
                <img src="~/Content/img/row_division.jpg" style="width:250px;height:180px;">
                @Html.TextBoxFor(model => model.Row_Div_No, new { @placeholder = "Starting from Top" })
            </div>

            <div class="col" style="height:180px;">
                <img src="~/Content/img/column_div.jpg" style="width:250px;height:180px;">


                @Html.TextBoxFor(model => model.Col_Div_No, new { @placeholder = "Starting from left" })






            </div>
        </div>

        <div class="row" style="margin-left:0px;margin-right:0px;margin-top:80px;">
            <div class="col" style="width:992px;">
                <input class="btn btn-primary" type="submit" value="Submit" style="height:50px;width:90px;font-family:Abel, sans-serif;margin-left:40px;">
            </div>
        </div>
    }
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>

