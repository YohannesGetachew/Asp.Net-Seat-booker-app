
@{
    ViewBag.Title = "UserIndex";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Progress1</title>

    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Abel">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">
    <link rel="stylesheet" href="~/Content/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/styles2.min.css">

    <style>
        .highlight-blue {
            background-color:transparent;
        }
        body {
            background-size:cover;
        }

    </style>
</head>

<body style= "background-image:url('@Url.Content("~/Content/img/chair4.jpg")');">
    <div>
        <nav class="navbar navbar-light navbar-expand-md navigation-clean" style="background-color:rgb(210,210,210);">
            <div class="container">
                <a class="navbar-brand" href="#">Grab A Seat</a><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse"
                     id="navcol-1">
                    <ul class="nav navbar-nav ml-auto">
                        <li class="nav-item" role="presentation">@Html.ActionLink("Home", "UserIndex", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Book Events", "BookEvents", "Chart", null, new { @class = "nav-link" })</li>
                    </ul>
                    <ul class="nav navbar-nav">
                        <li class="nav-item" role="presentation">@Html.ActionLink("My Events", "MyEvents", "Chart", null, new { @class = "nav-link" })</li>
                        <li class="nav-item" role="presentation">@Html.ActionLink("Logout", "Login", "Chart", null, new { @class = "nav-link", onclick = "return confirm('Are you sure');" })</li>
                    </ul>

                </div>
            </div>
        </nav>
    </div>
    <div class="highlight-blue" style="margin-top:100px;">
        <div class="container">
            <div class="intro">
                <h2 class="text-center" style="color:rgb(0,0,0);">Seating Made At Ease</h2>
                <p class="text-center" style="color:rgb(167,167,167);font-size:21px;">You are now in the hands of the master of Seat booking Site. So Please Relax and pick a Seat to An event from the Comfort of Your Home.</p>
            </div>
            
        </div>
    </div>
    <script src="~/Scripts/assets/js/jquery.min.js"></script>
    <script src="~/Scripts/assets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>

